#!/bin/bash

# options
 artisan_path="/var/www/artisan"
 artisan_command="schedule:run"
 log_dir_path="/customers/5/f/8/ukfluids.net/httpd.private/log"
 log_file_path="scheduler.log"
 date=$(date +"%Y-%b-%d-%H-%M")

# create directories if they do not exist
 if [ ! -d "$log_dir_path" ]; then
   mkdir -p $log_dir_path;
 fi

# start scheduler
 run=$(php $artisan_path $artisan_command 2>&1)
 echo "$date $run" >> $log_dir_path/$log_file_path
